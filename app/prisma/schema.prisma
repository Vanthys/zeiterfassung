// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/time_tracking.db"
}

enum Role {
  ADMIN
  USER
}

enum SessionStatus {
  ONGOING
  COMPLETED
  PAUSED
}

enum BreakType {
  PAID
  UNPAID
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  address   String?
  country   String?  // Locale for reports
  users     User[]
  invites   Invite[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id                Int                 @id @default(autoincrement())
  email             String              @unique
  password          String              // Hashed with bcrypt
  firstName         String?
  lastName          String?
  role              Role                @default(USER)
  weeklyHoursTarget Float               @default(40.0) // Expected weekly hours
  
  companyId         Int?                // Optional during migration, then required
  company           Company?            @relation(fields: [companyId], references: [id])
  
  isPasswordChangeRequired Boolean      @default(false)
  
  workSessions      WorkSession[]
  plannedSessions   PlannedSession[]
  sessionEdits      WorkSessionEdit[]   // Edits made by this user
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@index([email])
  @@index([role])
  @@index([companyId])
}

model Invite {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  companyId Int
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  role      Role     @default(USER)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([email])
}

model WorkSession {
  id            Int               @id @default(autoincrement())
  userId        Int
  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  startTime     DateTime
  endTime       DateTime?         // Null if ongoing
  status        SessionStatus     @default(ONGOING)
  
  // Calculated durations (in hours)
  totalDuration Float?            // Total time from start to end
  breakDuration Float             @default(0) // Total break time
  netDuration   Float?            // totalDuration - breakDuration
  
  // Optional fields
  note          String?
  project       String?           // Future: link to projects
  
  // Relations
  breaks        Break[]
  edits         WorkSessionEdit[]
  
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([userId])
  @@index([startTime])
  @@index([userId, startTime])
  @@index([userId, status])
}

model Break {
  id            Int          @id @default(autoincrement())
  workSessionId Int
  workSession   WorkSession  @relation(fields: [workSessionId], references: [id], onDelete: Cascade)
  
  startTime     DateTime
  endTime       DateTime?    // Null if currently on break
  duration      Float?       // Hours (calculated when ended)
  type          BreakType    @default(UNPAID)
  note          String?      // e.g., "Lunch", "Coffee break"
  
  createdAt     DateTime     @default(now())
  
  @@index([workSessionId])
  @@index([startTime])
}

model WorkSessionEdit {
  id            Int         @id @default(autoincrement())
  workSessionId Int
  workSession   WorkSession @relation(fields: [workSessionId], references: [id], onDelete: Cascade)
  editedBy      Int
  editor        User        @relation(fields: [editedBy], references: [id])
  editedAt      DateTime    @default(now())
  
  // What changed (JSON string)
  changes       String
  reason        String?
  
  @@index([workSessionId])
  @@index([editedBy])
  @@index([editedAt])
}

model PlannedSession {
  id        Int      @id @default(autoincrement())
  userId    Int
  startTime DateTime
  endTime   DateTime
  note      String?
  isOnCall  Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([startTime])
  @@index([endTime])
}
