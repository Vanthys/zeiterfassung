// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./time_tracking.db"
}

enum Role {
  ADMIN
  USER
}

enum SessionStatus {
  ONGOING
  COMPLETED
  PAUSED
}

enum BreakType {
  PAID
  UNPAID
}

model User {
  id                Int                 @id @default(autoincrement())
  email             String              @unique
  password          String              // Hashed with bcrypt
  firstName         String?
  lastName          String?
  role              Role                @default(USER)
  weeklyHoursTarget Float               @default(40.0) // Expected weekly hours
  workSessions      WorkSession[]
  plannedDays       PlannedDay[]
  sessionEdits      WorkSessionEdit[]   // Edits made by this user
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@index([email])
  @@index([role])
}

model WorkSession {
  id            Int               @id @default(autoincrement())
  userId        Int
  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  startTime     DateTime
  endTime       DateTime?         // Null if ongoing
  status        SessionStatus     @default(ONGOING)
  
  // Calculated durations (in hours)
  totalDuration Float?            // Total time from start to end
  breakDuration Float             @default(0) // Total break time
  netDuration   Float?            // totalDuration - breakDuration
  
  // Optional fields
  note          String?
  project       String?           // Future: link to projects
  
  // Relations
  breaks        Break[]
  edits         WorkSessionEdit[]
  
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([userId])
  @@index([startTime])
  @@index([userId, startTime])
  @@index([userId, status])
}

model Break {
  id            Int          @id @default(autoincrement())
  workSessionId Int
  workSession   WorkSession  @relation(fields: [workSessionId], references: [id], onDelete: Cascade)
  
  startTime     DateTime
  endTime       DateTime?    // Null if currently on break
  duration      Float?       // Hours (calculated when ended)
  type          BreakType    @default(UNPAID)
  note          String?      // e.g., "Lunch", "Coffee break"
  
  createdAt     DateTime     @default(now())
  
  @@index([workSessionId])
  @@index([startTime])
}

model WorkSessionEdit {
  id            Int         @id @default(autoincrement())
  workSessionId Int
  workSession   WorkSession @relation(fields: [workSessionId], references: [id], onDelete: Cascade)
  editedBy      Int
  editor        User        @relation(fields: [editedBy], references: [id])
  editedAt      DateTime    @default(now())
  
  // What changed (JSON string)
  changes       String
  reason        String?
  
  @@index([workSessionId])
  @@index([editedBy])
  @@index([editedAt])
}

model PlannedDay {
  id           Int      @id @default(autoincrement())
  userId       Int
  date         DateTime // The planned work date
  plannedHours Float    // Expected hours for this day
  notes        String?  // Optional notes
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}
